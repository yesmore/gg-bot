{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "moduleResolution": "node",
    "module": "ESNext",
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "public",
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"],
  "ts-node": {
    "esm": true
  }
}
